<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SupplyManagementSystem.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SupplyManagementSystem.Views.MarketDiffusionView"
             x:DataType="vm:MarketDiffusionViewModel">
    
    <UserControl.DataContext>
        <vm:MarketDiffusionViewModel/>
    </UserControl.DataContext>
    
    <Grid ColumnDefinitions="*" RowDefinitions="*,Auto">
        <!-- Определяем строки и колонки -->

        <!-- Изображение диффузии -->
        <Image x:Name="DiffusionImage"
               Source="{Binding Bitmap}"
               Stretch="Uniform"
               Grid.Row="0"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- Панель для кнопок -->
        <StackPanel Orientation="Horizontal" 
                    Grid.Row="1" 
                    HorizontalAlignment="Right" 
                    Margin="10">
            <Button Content="Restart" 
                    Command="{Binding RestartCommand}" 
                    Width="100" 
                    Height="30"/>
        </StackPanel>
    </Grid>

</UserControl>
